{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./lib/",
    "declaration": true,
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
    ],
  "exclude": [
    "./**/*test.ts",
    "./**/testResources/",
    "./lib"
  ]
}
